      </div>
      <div class="mv3">
        <%= f.label :password_confirmation, "Confirmar nueva contrase単a", class: "db fw4 lh-copy f6" %>
        <%= f.password_field :password_confirmation, class: "b pa2 input-reset ba br2 b--light-gray bg-transparent w-100", autocomplete: "off", required: true %>
      </div>
    </fieldset>
    <div class="mv3 tc">
      <input class="ph4 pv2 input-reset br-pill ba b--purple bg-purple white" type="submit" value="Cambiar contrase単a">
    </div>
  <% end %>
</section>

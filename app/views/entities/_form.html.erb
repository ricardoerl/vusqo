<%= form_for(@entity, :html => {"data-parsley-validate" => true}) do |f| %>
  <fieldset class="ba b--transparent ph0 mh0">
    <div class="pv3 bb b--light-gray">
      <h2 class="f6 fw4 purple mv0 ttu">Información general</h2>
    </div>
    <div class="cf mv3">
      <% if current_entity.logo.url.blank? %>
        <img src="http://placehold.it/300?text=Logo" class="fr w3 db center br2" />
      <% else %>
        <img src="<%= current_entity.logo.url %>" class="fr w3 db center br2" />
      <% end %>
      <%= f.label :logo, "Logo", class: "db fw4 lh-copy f6" %>
      <%= f.file_field :logo, class: "pa2 input-reset ba br2 b--light-gray bg-transparent center" %>
      <span class="dib f6 gray">Te recomendamos utilizar una imagen de 300x300.</span>
    </div>
    <div class="mv3">
      <%= f.label :name, "Nombre", class: "db fw4 lh-copy f6" %>
      <%= f.text_field :name, class: "pa2 input-reset ba br2 b--light-gray bg-transparent w-100", required: true %>
    </div>
    <div class="mv3">
      <%= f.label :description, "Descripción", class: "db fw4 lh-copy f6" %>
      <%= f.text_area :description, class: "pa2 input-reset ba br2 b--light-gray bg-transparent w-100", rows: 5, required: true %>
    </div>
    <div class="mv3">
      <%= f.label :website, "Sitio web", class: "db fw4 lh-copy f6" %>
      <%= f.url_field :website, class: "pa2 input-reset ba br2 b--light-gray bg-transparent w-100", required: true %>
    </div>
    <div class="mv3">
      <%= f.label :phone, "Teléfono", class: "db fw4 lh-copy f6" %>
      <%= f.text_field :phone, class: "pa2 input-reset ba br2 b--light-gray bg-transparent w-100", "data-parsley-type": "digits" %>
    </div>
    <div class="mv3">
      <%= f.label :contact_email, "Correo electrónico de contacto", class: "db fw4 lh-copy f6" %>
      <%= f.email_field :contact_email, class: "pa2 input-reset ba br2 b--light-gray bg-transparent w-100", required: true %>
    </div>
  </fieldset>

<% title 'Empresas' %>
<% description 'Vusqo te permite descubrir y conectar con las empresas que mueven la industria creativa en El Salvador.' %>

<section class="mw8 center pv3 ph2">
  <div class="pv3 ph2">
  <% if @entities.blank? %>
    <div class="pv4 tc">
      <h1 class="f-headline">:-(</h1>
      <p class="mv0">Todav√≠a no hay empresas registradas.</p>
      <%= link_to "Registrar una empresa", registro_path, class: "f6 link dim dib br-pill bg-purple white pv2 ph3 mv3" %>
    </div>
  <% else %>
    <h2 class="f6 fw4 gray mv0 ttu">Empresas registradas</h2>
  <% end %>
  </div>
  <div class="cf">
    <% @entities.each do |entity| %>
    <div class="fl w-50 w-20-m w-10-l pa2">
      <%= link_to entity_path(entity), class: "db link dim tc" do %>
        <img src="<%= entity.logo.url %>" class="w-100 db ba b--light-gray br2" alt="Logo de <%= @entity.name %>" />
        <dl class="mt2 f6 lh-copy">
          <dd class="ml0 black truncate w-100"><%= entity.name %></dd>
        </dl>
      <% end %>
    </div>
    <% end %>
  </div>
</section>

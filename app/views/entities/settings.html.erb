<% title 'Cambiar contraseña' %>

<section class="mw6 center pv4 ph2">

  <h1 class="mb4 fw4 tc">Mi cuenta</h1>
  <%= form_for(@entity, url: update_password_path, :html => {"data-parsley-validate" => true}) do |f| %>
  <fieldset class="ba b--transparent ph0 mh0">
    <div class="pv3 bb b--light-gray">
      <h2 class="f6 fw4 purple mv0 ttu">Información general</h2>
    </div>
    <div class="mv3">
      <%= f.label :email, "Correo electrónico", class: "db fw4 lh-copy f6" %>
      <%= f.email_field :email, class: "pa2 input-reset ba br2 b--light-gray bg-transparent w-100" %>
    </div>
    <div class="pv3 bb b--light-gray">
      <h2 class="f6 fw4 purple mv0 ttu">Cambiar contraseña</h2>
    </div>
    <div class="mv3">
      <%= f.label :password, "Nueva contraseña", class: "db fw4 lh-copy f6" %>
      <%= f.password_field :password, class: "pa2 input-reset ba br2 b--light-gray bg-transparent w-100", minlength: 6 %>
      <span class="dib f6 gray">Te recomendamos utilizar más de 6 caracteres.</span>
    </div>
    <div class="mv3">
      <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "db fw4 lh-copy f6" %>
      <%= f.password_field :password_confirmation, class: "pa2 input-reset ba br2 b--light-gray bg-transparent w-100", minlength: 6, "data-parsley-equalto": "#entity_password" %>
    </div>
  </fieldset>
  <div class="mv3 tc">
    <input class="ph4 dim pointer pv2 input-reset br-pill ba b--purple bg-purple white" type="submit" value="Guardar">
  </div>
  <% end %>
</section>

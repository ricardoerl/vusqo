<header class="bb b--light-gray">
  <div class="mw8 center ph3">
    <div class="cf lh-solid">
      <div class="fl pv3">
        <div class="dib v-mid mr4">
          <a href="<%= root_path %>" class="db link dim">
            <%= image_tag("vusqo-logo.png", size: "30", class: "dib v-mid mr2", alt: "Vusqo") %>
            <span class="f4 b v-mid">vusqo</span>
          </a>
        </div>
        <div class="dn dib-ns v-mid">
          <a href="#" class="link dim v-mid">Empresas</a>
        </div>
        <!-- <div class="dib v-mid mr3">
          <form action="">
            <input type="text" class="input-reset f6 ph3 ba b--light-gray w5 h2" placeholder="Buscar...">
          </form>
        </div> -->
      </div>
      <div class="fr">
        <ul class="list pl0 mv0">
          <% if current_entity.blank? %>
            <li class="dib v-mid mr3">
              <%= link_to "Iniciar sesión", new_entity_session_path, class: "link db dim gray db pv3" %>
            </li>
            <li class="dib v-mid">
              <%= link_to page_path('apply'), class: "link dim purple db pv3" do %>
                <span class="dn dib-ns v-mid mr1">Registar una empresa</span>
                <svg id="i-work" viewBox="0 0 32 32" width="30" height="30" class="dib v-mid" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="6.25%">
                  <path d="M30 8 L2 8 2 26 30 26 Z M20 8 C20 8 20 4 16 4 12 4 12 8 12 8 M8 26 L8 8 M24 26 L24 8" />
                </svg>
              <% end %>
            </li>
          <% else %>
            <li class="relative">
              <a href="#" class="link dim gray db pv3" id="profile-menu-link">
                <span class="v-mid mr1">Hola, <span class="dn dib-ns purple"><%= current_entity.name %></span></span>
                <img src="<%= current_entity.logo.url %>" width="30" height="30" class="dib v-mid br-100" alt="Logo">
              </a>
              <ul class="list bg-white pl0 mv0 absolute z-1 ba b--light-gray tr w5 right-0 dn" id="profile-menu">
                <li>
                  <a href="#" class="link dim gray db pa3">Mi perfil</a>
                </li>
                <li>
                  <a href="#" class="link dim gray db pa3">Configuración</a>
                </li>
                <li>
                  <%= link_to 'Cerrar sesión', destroy_entity_session_path, method: :delete, class: "link dim gray db pa3" %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
